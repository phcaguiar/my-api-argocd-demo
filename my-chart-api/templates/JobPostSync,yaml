apiVersion: batch/v1
kind: Job
metadata:
  generateName: app-slack-notification-
  annotations:
    argocd.argoproj.io/hook: PostSync
    argocd.argoproj.io/hook-delete-policy: HookSucceeded
spec:
  template:
    spec:
      containers:
        - name: slack-notification
          image: busybox
          command: ["echo 'Iniciando...'; sleep 60; echo 'Finalizado!'"]
      restartPolicy: Never
  backoffLimit: 2